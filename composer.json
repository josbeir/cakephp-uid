{
    "name": "josbeir/cakephp-uid",
    "description": "CakePHP plugin that provides various UID types for the ORM",
    "type": "cakephp-plugin",
    "require": {
        "cakephp/cakephp": "^5.1",
        "symfony/uid": "^7.3"
    },
    "require-dev": {
        "cakephp/migrations": "^4.5",
        "cakephp/plugin-installer": "^2",
        "phpunit/phpunit": "^10.5 || ^11.1 || ^12.0",
        "phpstan/phpstan": "^2.1",
        "cakephp/cakephp-codesniffer": "^5.2"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "CakeUid\\": "src/"
        },
        "autoload-dev": {
            "CakeUid\\TestApp\\": "tests/testapp/",
            "CakeUid\\Test\\": "tests/TestCase/"
        }
    },
    "authors": [
        {
            "name": "Jasper Smet",
            "email": "josbeir@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs --colors -p -s --extensions=php src/ tests/",
        "cs-fix": "phpcbf --colors -p -s --extensions=php src/ tests/"
    }
}
